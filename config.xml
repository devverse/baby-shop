<?xml version="1.0" encoding="UTF-8"?>

<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	versionCode="10"
	version 	= "1.6.7"
	id        = "com.tweency">

	<preference name="phonegap-version" value="2.3.0" />
	<preference name="fullscreen" value="false" />

	<name>Tweency Mobile</name>

	<description>
		Tweency.com on your mobile device
	</description>

	<author href="http://Tweency.com"
		email="support@Tweency.com">
		Tweency Mobile
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
		<gap:platform name="webos" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>

	<icon src="icon.png" width="72" height="72" />
	<icon src="icon.png" width="48" height="48" />
	<icon src="icon.png" width="36" height="36"  gap:role="default"  />

    <gap:splash src="splash.jpg" />

	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/network"/>

</widget>
